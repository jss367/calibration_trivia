{
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**", // This captures all routes
                "destination": "/index.html" // This serves index.html for all routes
            }
        ]
    }
}
